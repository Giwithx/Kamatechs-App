<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.FAQFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/faqConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="40dp"
            android:text="FAQ"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtqa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Kamatechs about?"
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="14dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView"/>

        <TextView
            android:id="@+id/faqcontext"
            android:text="The Kamatechs help farmers predict the outside environment and preserve the quality of post-harvest tomatoes using a deep learning-based prediction system for storage cooling devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:justificationMode="inter_word"
            tools:ignore="MissingConstraints"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:padding="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtqa1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>